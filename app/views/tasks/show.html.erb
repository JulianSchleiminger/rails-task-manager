<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<%= link_to "Edit this task", edit_task_path %>

<p><% if @task.completed %>
      <input type="checkbox" checked>
    <% else %>
      <input type="checkbox">
    <% end %>
</p>
<p>
  <%= @task.completed == true ? "This task was already completed." : "This task is not completed yet." %>
</p>
<%= link_to "Back Home", tasks_path %>
